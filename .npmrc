engine-strict=true
strict-peer-dependencies=true
link-workspace-packages=true
resolve-peers-from-workspace-root=true

# Hoist roblox-ts and flamework type packages to root node_modules
# so cross-references (e.g. @rbxts/compiler-types â†’ @rbxts/types) resolve correctly.
# Combined with preserveSymlinks in tsconfig, this ensures proper type resolution with pnpm.
public-hoist-pattern[]=@rbxts/*
public-hoist-pattern[]=@rbxts-js/*
public-hoist-pattern[]=@flamework/*
