{
  "name": "rbxts-package",
  "version": "0.0.0",
  "private": true,
  "description": "NX monorepo for roblox-ts game package development",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "build:assets": "nx build @nicholasosto/assets",
    "build:game-test": "nx build @nicholasosto/game-test",
    "build:node-tools": "nx build @nicholasosto/node-tools",
    "build:ai-tools": "nx build @nicholasosto/ai-tools",
    "build:name-generator": "nx build @nicholasosto/name-generator",
    "watch:game-test": "nx run @nicholasosto/game-test:watch",
    "serve:game-test": "nx run @nicholasosto/game-test:rojo-serve",
    "graph": "nx graph",
    "lint": "nx run-many -t lint",
    "lint:fix": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "format": "prettier --write 'packages/*/src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'packages/*/src/**/*.{ts,tsx,json}'",
    "typecheck": "nx run-many -t typecheck",
    "test": "nx run-many -t test",
    "test:coverage": "nx run-many -t test -- --coverage",
    "check:exports": "knip",
    "check:deps": "knip --dependencies",
    "health": "node scripts/health.mjs",
    "clean": "nx run-many -t clean",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "nx": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/eslint-plugin": "^21.4.1",
    "typescript": "^5.5.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "simple-git-hooks": "^2.11.0",
    "lint-staged": "^15.4.0",
    "knip": "^5.0.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0"
  }
}
