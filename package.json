{
  "name": "rbxts-package",
  "version": "0.0.0",
  "private": true,
  "description": "NX monorepo for roblox-ts game package development",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "build:assets": "nx build @nicholasosto/assets",
    "build:game-test": "nx build @nicholasosto/game-test",
    "build:node-tools": "nx build @nicholasosto/node-tools",
    "build:ai-tools": "nx build @nicholasosto/ai-tools",
    "build:name-generator": "nx build @nicholasosto/name-generator",
    "watch:game-test": "nx run @nicholasosto/game-test:watch",
    "serve:game-test": "nx run @nicholasosto/game-test:rojo-serve",
    "graph": "nx graph",
    "lint": "nx run-many -t lint",
    "clean": "nx run-many -t clean"
  },
  "devDependencies": {
    "nx": "^21.4.1",
    "@nx/js": "^21.4.1",
    "typescript": "^5.5.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0"
  }
}
