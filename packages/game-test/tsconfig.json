{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleDetection": "force",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noLib": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@rbxts", "node_modules/@flamework", "node_modules/@nicholasosto"],
    "preserveSymlinks": true,
    "rootDir": "src",
    "outDir": "out",
    "declaration": false,
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "rbxts-transformer-flamework"
      }
    ],
    "paths": {
      "@nicholasosto/assets": ["./node_modules/@nicholasosto/assets/out"],
      "@nicholasosto/combat-stats": ["./node_modules/@nicholasosto/combat-stats/out"],
      "@nicholasosto/name-generator": ["./node_modules/@nicholasosto/name-generator/out"],
      "@nicholasosto/ultra-ui": ["./node_modules/@nicholasosto/ultra-ui/out"],
      "@nicholasosto/timer": ["./node_modules/@nicholasosto/timer/out"]
    }
  },
  "include": ["src/**/*"]
}
