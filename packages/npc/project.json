{
  "name": "@nicholasosto/npc",
  "sourceType": "npc",
  "tags": ["scope:roblox", "type:lib"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rbxtsc",
        "cwd": "packages/npc"
      },
      "cache": true,
      "inputs": ["default"],
      "outputs": ["{projectRoot}/out"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rbxtsc -w",
        "cwd": "packages/npc"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf out include",
        "cwd": "packages/npc"
      }
    }
  }
}
