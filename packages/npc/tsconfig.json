{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleDetection": "force",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noLib": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@rbxts", "node_modules/@nicholasosto"],
    "preserveSymlinks": true,
    "rootDir": "src",
    "outDir": "out",
    "declaration": true,
    "declarationDir": "out",
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@rbxts/*": ["./node_modules/@rbxts/*"],
      "@nicholasosto/assets": ["./node_modules/@nicholasosto/assets"],
      "@nicholasosto/combat-stats": ["./node_modules/@nicholasosto/combat-stats"],
      "@nicholasosto/name-generator": ["./node_modules/@nicholasosto/name-generator"]
    }
  },
  "include": ["src/**/*"]
}
